<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>

<h1>Your todolist:</h1>
<%= link_to "Add task", new_task_path %>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <h3><%= task.todo %></h3>
    <p><%= "Should take about: #{task.duration} min." %> </p>
    <%= link_to "Show this task", task_path(task) %>
    <%= link_to "Edit this task", edit_task_path(task) %>
    <%= link_to "Delete this task", task_path(task), method: :delete %>
  </li>
  <% end %>
</ul>
